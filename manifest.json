{
  "manifest_version": 2,
  "name": "Kahoot Keyboard Shortcuts",
  "version": "1.1",

  "description": "Adds keyboard shortcuts to Kahoot.",

  "content_scripts": [
    {
      "matches": ["*://kahoot.it/*"],
      "js": ["kahoot.js"]
    }
  ],

  "icons": {
    "48": "icon.png",
    "96": "icon@2x.png"
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": ["storage"],

  "applications": {
    "gecko": {
      "id": "kahoot@lkellar.org"
    }
  }
}