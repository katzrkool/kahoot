{
  "manifest_version": 2,
  "name": "Keyboard Shortcuts for Kahoot",
  "version": "2020.3",

  "description": "Adds keyboard shortcuts to Kahoot.",

  "content_scripts": [
    {
      "matches": ["*://kahoot.it/*"],
      "js": ["kahoot.js"]
    }
  ],

  "icons": {
    "48": "icon.png",
    "96": "icon@2x.png"
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": ["storage"],
  
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icon.png",
      "96": "icon@2x.png"
    },
    "default_title": "Keyboard Shortcuts for Kahoot",
    "default_popup": "options/options.html"
  },

  "applications": {
    "gecko": {
      "id": "kahoot@lkellar.org"
    }
  }
}